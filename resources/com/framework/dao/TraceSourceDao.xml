<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.framework.dao.TraceSourceDao">

	<select id="queryObject" resultType="com.framework.entity.TraceSourceEntity">
		select * from t_trace_source where id = #{value}
	</select>

	<select id="queryList" resultType="com.framework.entity.TraceSourceEntity">
		select * from t_trace_source where 1=1
		<if test="orderTypeCd != null and orderTypeCd.trim() != ''">
			and order_type_cd like concat('%', #{orderTypeCd}, '%')
		</if><if test="orderNo != null and orderNo.trim() != ''">
			and order_no like concat('%', #{orderNo}, '%')
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(*) from t_trace_source where 1=1
		<if test="orderTypeCd != null and orderTypeCd.trim() != ''">
			and order_type_cd like concat('%', #{orderTypeCd}, '%')
		</if><if test="orderNo != null and orderNo.trim() != ''">
			and order_no like concat('%', #{orderNo}, '%')
		</if>
	</select>

	<insert id="save" parameterType="com.framework.entity.TraceSourceEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_trace_source
		(
			`order_no`, 
			`order_type_cd`, 
			`content`, 
			`content_url`, 
			`qr_code_url`,
			`create_time`,
			`update_time`
		)
		values
		(
			#{orderNo},
			#{orderTypeCd},
			#{content},
			#{contentUrl},
			#{qrCodeUrl},
			#{createTime},
			#{updateTime}
		)
	</insert>

	<update id="update" parameterType="com.framework.entity.TraceSourceEntity">
		update t_trace_source
		<set>
			<if test="orderNo != null">`order_no` = #{orderNo}, </if>
			<if test="orderTypeCd != null">`order_type_cd` = #{orderTypeCd}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="contentUrl != null">`content_url` = #{contentUrl}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime},</if>
			<if test="qrCodeUrl != null">`qr_code_url` = #{qrCodeUrl}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from t_trace_source where id = #{value}
	</delete>

	<delete id="deleteBatch">
		delete from t_trace_source where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>