<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.framework.dao.BankCardDao">

	<select id="queryObject" resultType="com.framework.entity.BankCardEntity">
		select * from bank_card where id = #{value}
	</select>

	<select id="queryList" resultType="com.framework.entity.BankCardEntity">
		select * from bank_card 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from bank_card 
	</select>
	 
	<insert id="save" parameterType="com.framework.entity.BankCardEntity" useGeneratedKeys="true" keyProperty="id">
		insert into bank_card
		(
			`bank_no`, 
			`bank_open`, 
			`bank`, 
			`bank_owner`, 
			`create_time`, 
			`create_by`, 
			`update_time`, 
			`update_by`, 
			`mark`, 
			`flg`
		)
		values
		(
			#{bankNo}, 
			#{bankOpen}, 
			#{bank}, 
			#{bankOwner}, 
			#{createTime}, 
			#{createBy}, 
			#{updateTime}, 
			#{updateBy}, 
			#{mark}, 
			#{flg}
		)
	</insert>
	 
	<update id="update" parameterType="com.framework.entity.BankCardEntity">
		update bank_card 
		<set>
			<if test="bankNo != null">`bank_no` = #{bankNo}, </if>
			<if test="bankOpen != null">`bank_open` = #{bankOpen}, </if>
			<if test="bank != null">`bank` = #{bank}, </if>
			<if test="bankOwner != null">`bank_owner` = #{bankOwner}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="mark != null">`mark` = #{mark}, </if>
			<if test="flg != null">`flg` = #{flg}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from bank_card where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from bank_card where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	<select id="queryAvailableCard" resultType="com.framework.entity.BankCardEntity">
		select * from bank_card where flg = #{flg} order by create_time desc limit 1
	</select>
</mapper>