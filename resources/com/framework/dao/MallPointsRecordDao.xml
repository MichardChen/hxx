<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.dao.MallPointsRecordDao">

    <select id="queryList" resultType="com.framework.entity.MallPointsRecord">
        select * from mall_points_record where 1=1
        and user_id = #{userId}
        order by id desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from mall_points_record
	</select>

    <insert id="save" parameterType="com.framework.entity.MallPointsRecord" useGeneratedKeys="true" keyProperty="id">
        insert into mall_points_record
        (
            `user_type_cd`,
            `user_id`,
            `operate_type_cd`,
            `point`,
            `mark`,
            `create_time`,
            `update_time`
        )
        values
        (
            #{userTypeCd},
            #{userId},
            #{operateTypeCd},
            #{point},
            #{mark},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <select id="queryAllTotal" resultType="int">
        select count(*) from mall_points_record t
        inner join t_member u on u.id = t.user_id
        where 1=1
        <!-- 用户名-->
        <if test="userName != null and userName.trim() != ''">
            and u.name like concat('%', #{userName}, '%')
        </if>
    </select>

    <select id="queryAllList" resultType="com.framework.vo.MallPointsListVo">
        select t.*, u.name as userName from mall_points_record t
        inner join t_member u on u.id = t.user_id
        where 1=1
        <!-- 用户名-->
        <if test="userName != null and userName.trim() != ''">
            and u.name like concat('%', #{userName}, '%')
        </if>
        order by create_time desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
</mapper>