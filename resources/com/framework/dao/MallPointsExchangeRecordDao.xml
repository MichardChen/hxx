<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.dao.MallPointsExchangeRecordDao">
    <insert id="save" parameterType="com.framework.entity.MallPointsExchangeRecord" useGeneratedKeys="true" keyProperty="id">
        insert into mall_points_exchange_record
        (
            `user_type_cd`,
            `user_id`,
            `product_id`,
            `mark`,
            `address`,
            `status`,
            `logistic`,
            `create_time`,
            `update_time`,
            `points`,
            `quality`,
            `moneys`,
            `buy_type_cd`,
            `receive_name`,
            `receive_mobile`
        )
        values
        (
            #{userTypeCd},
            #{userId},
            #{productId},
            #{mark},
            #{address},
            #{status},
            #{logistic},
            #{createTime},
            #{updateTime},
            #{points},
            #{quality},
            #{moneys},
            #{buyTypeCd},
            #{receiveName},
            #{receiveMobile}
        )
    </insert>
    <select id="queryList" resultType="com.framework.entity.MallPointsExchangeRecord">
        select * from mall_points_exchange_record where user_id = #{userId}
        order by update_time desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="queryObject" resultType="com.framework.entity.MallPointsExchangeRecord">
        select * from mall_points_exchange_record where id = #{value}
    </select>
</mapper>