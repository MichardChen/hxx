<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.dao.MallPointsExchangeRecordDao">

    <select id="queryTotal" resultType="int">
		select count(*) from mall_points_exchange_record
	</select>

    <select id="queryAllTotal" resultType="int">
		select count(*) from mall_points_exchange_record t
        inner join t_member u on u.id = t.user_id
        inner join mall_products p on p.id = t.product_id
        where 1=1
        <!-- 用户名-->
        <if test="userName != null and userName.trim() != ''">
            and u.name like concat('%', #{userName}, '%')
        </if>
        <!-- 产品名称-->
        <if test="productTitle != null and productTitle.trim() != ''">
            and p.product_title like concat('%', #{productTitle}, '%')
        </if>
        <!-- 收件人-->
        <if test="receiveName != null and receiveName.trim() != ''">
            and t.receive_name like concat('%', #{receiveName}, '%')
        </if>
        <!-- 状态-->
        <if test="status != null and status.trim() != ''">
            and t.status = #{status}
        </if>
	</select>

    <select id="queryAllList" resultType="com.framework.vo.MallExchangeRecordVo">
        select t.*, u.name as userName,p.product_title as productTitle from mall_points_exchange_record t
        inner join t_member u on u.id = t.user_id
        inner join mall_products p on p.id = t.product_id
        where 1=1
        <!-- 用户名-->
        <if test="userName != null and userName.trim() != ''">
            and u.name like concat('%', #{userName}, '%')
        </if>
        <!-- 产品名称-->
        <if test="productTitle != null and productTitle.trim() != ''">
            and p.product_title like concat('%', #{productTitle}, '%')
        </if>
        <!-- 收件人-->
        <if test="receiveName != null and receiveName.trim() != ''">
            and t.receive_name like concat('%', #{receiveName}, '%')
        </if>
        <!-- 状态-->
        <if test="status != null and status.trim() != ''">
            and t.status = #{status}
        </if>
        order by create_time desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="save" parameterType="com.framework.entity.MallPointsExchangeRecord" useGeneratedKeys="true" keyProperty="id">
        insert into mall_points_exchange_record
        (
            `user_type_cd`,
            `user_id`,
            `product_id`,
            `mark`,
            `address`,
            `status`,
            `logistic`,
            `create_time`,
            `update_time`,
            `points`,
            `quality`,
            `moneys`,
            `buy_type_cd`,
            `receive_name`,
            `receive_mobile`
        )
        values
        (
            #{userTypeCd},
            #{userId},
            #{productId},
            #{mark},
            #{address},
            #{status},
            #{logistic},
            #{createTime},
            #{updateTime},
            #{points},
            #{quality},
            #{moneys},
            #{buyTypeCd},
            #{receiveName},
            #{receiveMobile}
        )
    </insert>
    <select id="queryList" resultType="com.framework.entity.MallPointsExchangeRecord">
        select * from mall_points_exchange_record where user_id = #{userId}
        order by update_time desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="queryObject" resultType="com.framework.entity.MallPointsExchangeRecord">
        select * from mall_points_exchange_record where id = #{value}
    </select>

    <select id="queryVoObject" resultType="com.framework.vo.MallExchangeRecordVo">
        select t.*, u.name as userName,p.product_title as productTitle from mall_points_exchange_record t
        inner join t_member u on u.id = t.user_id
        inner join mall_products p on p.id = t.product_id
        where t.id = #{id}
    </select>

    <!-- 更新物流及收货人信息 -->
    <update id="updateReceiveInfo" parameterType="com.framework.entity.MallPointsExchangeRecord">
        update mall_points_exchange_record
        <set>
            `status` = #{status},
            `receive_name` = #{receiveName},
            `receive_mobile` = #{receiveMobile},
            `logistic` = #{logistic},
            `mark` = #{mark}
        </set>
        where id = #{id}
    </update>
</mapper>