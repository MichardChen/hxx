<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.framework.dao.TQuestionDao">

	<select id="queryObject" resultType="com.framework.entity.TQuestionEntity">
		select * from t_question where id = #{value}
	</select>

	<select id="queryList" resultType="com.framework.entity.TQuestionEntity">
		select * from t_question
		where 1=1
		<if test="date != null and date != ''">
			and create_time like "%${date}%"
		</if>
		 order by update_time desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_question where 1=1
		<if test="date != null and date != ''">
			and create_time like "%${date}%"
		</if>
	</select>
	 
	<insert id="save" parameterType="com.framework.entity.TQuestionEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_question
		(
			`mobile`, 
			`link_man`, 
			`question`, 
			`cart_id`, 
			`employee_id`, 
			`status`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`,
			`type_cd`,
			`cartflg`
		)
		values
		(
			#{mobile}, 
			#{linkMan}, 
			#{question}, 
			#{cartId}, 
			#{employeeId}, 
			#{status}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime},
			#{typeCd},
			#{cartflg}
		)
	</insert>
	 
	<update id="update" parameterType="com.framework.entity.TQuestionEntity">
		update t_question 
		<set>
			<if test="employeeId != null">`employee_id` = #{employeeId}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_question where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_question where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>